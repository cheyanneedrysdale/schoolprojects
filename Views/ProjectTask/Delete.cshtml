@model COMP2139_ICE.Models.ProjectTask
@{
    ViewData["Title"] = "Delete Task";
}
<h2>delete task</h2>

<h4>are you <u><strong><em>sure</em></strong></u> you want to delete this task?</h4>

<dl class="row">
    <dt class="col-sm-2">title</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">description</dt>
    <dd class="col-sm-10">@Model.Description</dd>
</dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ProjectTaskId" />
    <button type="submit" class="btn btn-danger">delete</button>
    <a class="btn btn-secondary" asp-action="Index" asp-route-projectId="@Model.ProjectId">cancel</a>
</form>