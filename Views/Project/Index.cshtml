
@* indicates that the view expects a list of Project objects as its model *@

@model List<Project>

@{

    ViewData["Title"] = "Projects";

}


<h2>Projects</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">create new project</a>
</p>


@if (Model != null && Model.Count > 0)
{
    <table class="table">

        <thead>

        <tr>

            <th>ID</th>

            <th>Name</th>

            <th>Description</th>
            
            <th>Action</th>
            
        </tr>

    </thead>

    <tbody>
    

    @foreach (var project in Model)

    {

        <tr>

            <td>@project.ProjectId</td>

            <td>@project.Name</td>

            <td>@project.Description</td>
            
            <td>
                <a asp-action="Details" asp-route-id="@project.ProjectId">Details</a>
                <a asp-action="Edit" asp-route-id="@project.ProjectId">Edit</a>
                <a asp-action="Delete" asp-route-id="@project.ProjectId">Delete</a>
            </td>

        </tr>

    }

    </tbody>

</table>

}

else

{

<p>No projects available.</p>

}