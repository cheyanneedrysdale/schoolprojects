@model COMP2139_ICE.Models.Project 

 
 

@{ 

    ViewBag.Title = "Edit Project"; 

    Layout = "_Layout"; 

} 

 
 

<h2>@ViewBag.Title</h2> 
 

<!--  asp-action="Edit"         method="post"> --> 

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ProjectId)



    <div class="mb-3">

        <label asp-for="Name" class="control-label"></label>

        <input asp-for="Name" class="form-control" />

        <span asp-validation-for="Name" class="text-danger"></span>

    </div>




    <div class="mb-3">

        <label asp-for="Description" class="control-label"></label>

        <textarea asp-for="Description" class="form-control"></textarea>

        <span asp-validation-for="Description" class="text-danger"></span>

    </div>




    <div class="form-group">

        <input type="submit" value="Save" class="btn btn-primary"/>

        <a asp-action="Index" class="btn btn-secondary">Cancel</a>

    </div>



</form> 

 
 

@section Scripts { 

    @{ 

        // The following line renders a partial view called "_ValidationScriptsPartial". 

        // This partial view typically includes client-side validation scripts for forms. 

        // It ensures that the JavaScript necessary for handling validation attributes  

        // (like [Required]) in the model is loaded on the page. 

        await Html.RenderPartialAsync("_ValidationScriptsPartial"); 

    } 

}